<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_border">
    <TextView
        android:layout_width="match_parent"
        android:text="Select Distance"
        android:layout_gravity="center"
        android:textColor="@color/focused_edittext_border_color"
        android:textSize="@dimen/username_font_size"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lvDistancemile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:divider="@color/focused_edittext_border_color"
        android:dividerHeight="1px"
        android:cacheColorHint="#00000000"/>
</LinearLayout>