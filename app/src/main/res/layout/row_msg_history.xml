<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/tvMsgHistoryUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Username"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/focused_edittext_border_color"
            android:textSize="@dimen/username_font_size"/>

        <TextView
            android:id="@+id/tvMsgHistoryUserId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=""
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/focused_edittext_border_color"
            android:textSize="@dimen/username_font_size"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMsgHistoryMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gender"
            android:padding="5dp"
            android:textColor="@color/green"
            android:textSize="@dimen/font_size"/>

        <TextView
            android:id="@+id/tvMessageDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="date"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/font_size"
            android:gravity="end"
            android:textColor="@color/blue"
            android:padding="5dp" />
    </LinearLayout>

</LinearLayout>